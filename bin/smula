#!/usr/bin/env php

<?php

class Smula
{
	function __construct()
	{
		global $argv;
		if (count($argv) < 3) {
			echo "Not enough arguments!\n";
			if (!isset($argv[1]))
				echo "Please specify an option\n";
			if (!isset($argv[2]))
				echo "Please specify a name\n";

			echo "\nUsage: smula [option] [name]\n";
			exit(1);
		}

		$option = $argv[1];
		$name = $argv[2];

		if (strpos($option, ':') > -1) {
			$option = explode(':', $option);
			if (count($option) > 2) {
				echo "Invalid option\n";
				exit(1);
			}

			switch ($option[0]) {
				case 'make':
					$this->makeSelector($option[1], $name);
					break;
				
				default:
					echo "Invalid option\n";
					exit(1);
			}
		} else {
			if ($option == 'new') {
				$this->generateNewProject($name);
				exit(0);
			}
		}
	}

	function generateNewProject($name)
	{
		echo "Creating the folder $name and setting up the new project\n";

		exec("mkdir $name");
		exec("cp -R ".__DIR__."/../src/. $name/.");

		exit(0);
	}

	function makeSelector($opt, $name)
	{
		switch ($opt) {
			case 'controller':
				$this->makeController($name);
				break;
			
			default:
				echo "Invalid option\n";
				exit(1);
		}
	}

	function makeController($name)
	{
		echo "Generating a controller with the name $name\n";
		exit(0);
	}
}

new Smula();

?>
